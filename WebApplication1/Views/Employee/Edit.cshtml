@model EmployeeFullDetailsModel

<form class="col-md-9" method="post">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Level"></label>
            <input asp-for="Level" class="form-control" />
            <span asp-validation-for="Level" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartingDate"></label>
            <input asp-for="StartingDate" class="form-control" />
            <span asp-validation-for="StartingDate" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VacationDays"></label>
            <input asp-for="VacationDays" class="form-control" />
            <span asp-validation-for="VacationDays" class="form-text text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Save Employee" class="btn" />
    </div>
</form>