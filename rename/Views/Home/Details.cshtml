@model CompanyServiceModel

<form class="col-md-9" method="post">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Founded"></label>
            <input asp-for="Founded" class="form-control" />
            <span asp-validation-for="Founded" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Information"></label>
            <input asp-for="Information" class="form-control" />
            <span asp-validation-for="Information" class="form-text text-danger"></span>
        </div>
    </div>
    <h4>Employees:</h4>
    <div class="col-md-3">
        <div class="form-group">
            @if (Model.Employees != null)
            {
                @foreach (var employee in Model.Employees)
                {
                    <div>@employee.Name</div>
                    <div>@employee.Experience</div>
                    <div>@employee.StartingDate</div>
                    <div>@employee.Salary </div>
                    <div>@employee.VacationDays</div>
                    <a class="btn btn-warning btn-sm" href="/employee/edit/@employee.Id">Edit</a>
                }
            }
            <a class="btn btn-warning btn-sm" href="/employee/create/@Model.Id">New Employee</a>
        </div>
    </div>
    <div class="col-md-3">
        <div>
            <input type="submit" value="Save Company" class="btn" />
        </div>
    </div>
</form>